{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
      "@infra/*": [
        "./src/infra/*"
      ],
      "@test/*": [
        "./tests/*"
      ]
    }
  }
}